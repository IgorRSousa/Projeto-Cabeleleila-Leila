                        case "novo":
                            include("usuarios/cadastro-usuario.php");
                            break;
                        case "listar":
                            include("usuarios/listar-usuario.php");
                            break;
                        case "salvar":
                            include("usuarios/salvar-cadastro.php");
                            break;
                        case "editar":
                            include("usuarios/editar-cadastro.php");
                            break;
                        
